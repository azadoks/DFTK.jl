&CONTROL
    calculation = 'scf'
    verbosity = 'high'
    tstress = .true.
    tprnfor = .true.
    outdir = './'
    prefix = 'silicon_NLCC'
    disk_io = 'nowf'
    pseudo_dir = './'
/

&SYSTEM
    ibrav = 2
    celldm(1) = 10.26314133
    nat = 2
    ntyp = 1
    ecutwfc = 14.0
    occupations = 'fixed'
    ! input_dft = 'sla+pw'
    input_dft = 'xc-001l-007l'  ! lda_x + lda_c_vwn
/

&ELECTRONS
    electron_maxstep = 80
    conv_thr = 2.0d-12
/

ATOMIC_SPECIES
    Si 28.085 Si_nc-sr-04_pbe_standard.upf

ATOMIC_POSITIONS crystal
    Si  0.12625  0.12750  0.12875
    Si -0.12500 -0.12500 -0.12500

K_POINTS automatic
    2 2 2 0 0 0
